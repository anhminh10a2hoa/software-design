<!-- <VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fi.tuni.forecast.ForecastController"> -->
<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #FFF2CC;" xmlns="http://javafx.com/javafx/20.0.1" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="fi.tuni.forecast.ForecastController">
   <children>
      <Label prefHeight="17.0" prefWidth="53.0" text="Forecast" />
      <HBox prefHeight="383.0" prefWidth="257.0">
         <children>
            <TabPane prefHeight="383.0" prefWidth="724.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Hourly">
                     <content>
                        <AnchorPane prefHeight="354.0" prefWidth="367.0" />
                     </content>
                </Tab>
                <Tab text="Daily">
                     <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                     </content>
                </Tab>
                  <Tab text="Weekly">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                     </content>
                  </Tab>
                  <Tab text="Monthly">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="354.0" prefWidth="381.0" />
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
            <VBox prefHeight="383.0" prefWidth="487.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Latitude:" />
                  <TextField fx:id="latitudeInput" prefHeight="25.0" prefWidth="197.0" />
                  <Label style="-fx-font-weight: bold;" text="Longitude:" />
                  <TextField fx:id="longitudeInput" />
                  <Button fx:id="getWeatherButton" style="-fx-background-color: #3498db;                          -fx-text-fill: white;                          -fx-font-size: 14px;                          -fx-padding: 10px;                         -fx-cursor: hand;" text="Get weather" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fi.tuni.design_driven_devs.PrimaryController">
    <children>
        <Label text="Weather" style="-fx-font-size: 24px;" />
        <HBox spacing="10">
            <Label text="Latitude:" />
            <TextField fx:id="latitudeInput" />
            <Label text="Longitude:" />
            <TextField fx:id="longitudeInput" />
        </HBox>
        <Button fx:id="getWeatherButton" text="Get Weather" onAction="#getWeatherData"/>

        <!-- Weather Data Grid -->
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            
            <!-- Labels with fx:id for data updating -->
            <Label fx:id="timezoneLabel" text="Timezone:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="temperatureLabel" text="Temperature:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="feelsLikeLabel" text="Feels Like:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label fx:id="pressureLabel" text="Pressure:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Label fx:id="humidityLabel" text="Humidity:" GridPane.columnIndex="0" GridPane.rowIndex="4" />

            <!-- Weather Image -->
            <ImageView>
                <image>
                    <Image url="https://openweathermap.org/img/wn/10d.png" />
                </image>
            </ImageView>
            
            <!-- Image Row Span -->
            <GridPane.rowIndex>
                <Integer fx:value="0" />
            </GridPane.rowIndex>
            <GridPane.rowSpan>
                <Integer fx:value="5" />
            </GridPane.rowSpan>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
